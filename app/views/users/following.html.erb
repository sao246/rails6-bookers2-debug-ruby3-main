<h1>Follow Users</h1>

<ul>
  <% if @following.empty? %>
    ユーザーはいません。
  <% else %>
    <table class='table'>
      <% @following.each do |following| %>
      <tr>
        <td><%= image_tag following.get_profile_image, size:'100x100' %></td>
        <td><%= following.name %></td>
        <td><p>フォロー数： <%= following.following.count %></p></td>
        <td><p>フォロワー数： <%= following.followers.count %></p></td>
        <td><%= link_to "Show", following %></td>
      </tr>
      <% end %>
    </table>
  <% end %>
</ul>