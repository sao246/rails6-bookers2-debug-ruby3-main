<p>コメント件数：<%= book.book_comments.count %></p>
  <table class='table'>
    <tbody>
      <% book.book_comments.each do |book_comment| %>
        <tr>
          <td><%= image_tag book_comment.user.get_profile_image, size: "100x100" %></td>
          <td><%= book_comment.user.name %></td>
          <td><%= book_comment.comment %></td>
          <% if book_comment.user == current_user %>
            <td>
              <%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, class: "btn btn-sm btn-danger", remote: true %>
            </td>
          <% end %>
        </tr>
      <% end %>
   </tbody>
  </table>